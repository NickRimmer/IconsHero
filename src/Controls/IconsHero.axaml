<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonia="clr-namespace:IconsHero.Controls.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="IconsHero.Controls.Avalonia.IconsHero">
    <TextBlock
        x:Name="TextBlockIcon"
        Foreground="{Binding $parent[avalonia:IconsHero].Foreground}"
        FontSize="{Binding $parent[avalonia:IconsHero].FontSize}"
        HorizontalAlignment="Center"
        Padding="0"
        Margin="0"
        VerticalAlignment="Center" />
</UserControl>