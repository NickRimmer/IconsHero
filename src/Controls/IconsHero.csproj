<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>IconsHero.Controls.Avalonia</PackageId>
    <Authors>NickRimmer</Authors>
    <Description>Hero icon control for Avalonia UI.</Description>
    <PackageTags>avalonia;icons;ui;controls;phosphor;fluent</PackageTags>
    <RepositoryUrl>https://github.com/NickRimmer/IconsHero</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/NickRimmer/IconsHero</PackageProjectUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <IncludeSource>true</IncludeSource>
    <RootNamespace>IconsHero.Controls.Avalonia</RootNamespace>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" />
  </ItemGroup>
  
  <ItemGroup>
    <AvaloniaResource Include="Assets\**"/>
  </ItemGroup>
  
  <ItemGroup>
    <UpToDateCheckInput Remove="Assets\fonts\fluent\fluent-fill.ttf" />
    <UpToDateCheckInput Remove="Assets\fonts\fluent\fluent-regular.ttf" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="" />
  </ItemGroup>
</Project>